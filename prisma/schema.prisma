datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  middleName  String?
  lastName    String
  dateOfBirth DateTime
  role        String  
  schoolName  String
  email       String   @unique
  password    String   
  invitationId String? 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
